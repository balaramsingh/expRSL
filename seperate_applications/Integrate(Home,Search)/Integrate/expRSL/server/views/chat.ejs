<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<!-- Font Awesome -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
  rel="stylesheet"
/>
<!-- Google Fonts -->
<link
  href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
  rel="stylesheet"
/>
<!-- MDB -->
<link
  href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.3.0/mdb.min.css"
  rel="stylesheet"
/>
<!-- MDB -->
<script>
  const flag=0;
  function search(){
    var nameKey=document.getElementById("search").value;
    var json = JSON.parse('<%- JSON.stringify(rooms) %>');
    var myArray=Object.keys(json);
    var ans=""
    
    console.log(json[0])
    for (var i=0; i < myArray.length; i++) {
        if (myArray[i] === nameKey) {
            document.getElementById("demo").innerHTML="Group ''"+myArray[i]+"'' is Found ,'click JOIN ROOM!'";
            document.getElementById("room").href=myArray[i];
            ans=myArray[i];
            flag=1;
            break;
        }
        document.getElementById("demo").innerHTML="Group Not Found !!! Sorry, You can't join room !!!"
    }
  }   
    
</script>
    <title>Chat</title>
  </head>
  
</head>
<body>
  
   <div class="container">
    <div class="row">
      <div class="col-sm" style="padding-top:50px">
              <h3 style="padding-left:1.2cm; color:blueviolet;"> Available Chat Rooms </h3> 
      <div id="room-container">
        <ul class="list-group">
          <li class="list-group-item">
            
            <% Object.keys(rooms).forEach(room => { %>
              
                <div class="shadow p-3 mb-5 bg-white rounded"><div class="text-center" style="padding: left 20px;"> <%= room %></div>
                <div style="padding-left:2.5cm;"> 
                  <a href="/<%= room %>"class="btn btn-primary" style="background-color: blueviolet;">Join Room</a>

                </div>   
              </div>
              
            <% }) %>
          </li>
        </ul>
       
      </div>
      </div>
      
      <div class="col-sm" style="padding-top: 50px;padding-left: 3cm;">
        <div class="input-group rounded" style="color: blueviolet;">
          <input type="search" class="form-control rounded" id="search" value="" placeholder="Search" aria-label="Search"/>
            <button id="Search" type="button" onclick=search() style="background-color: blueviolet;" class="btn btn-primary">
            <i class="fas fa-search"></i>
          </span>

         
        </div>
       
          <div class="shadow p-3 mb-5 bg-white rounded">
            <p >Results</p>
            <p id="demo" style="color: blueviolet;">Please search a group before joining</p>

          </div>
         
           <div style="padding-left: 3cm;" >
            <b><a href="" class="btn btn-primary" id="room" style="background-color: blueviolet;">Join Room</a></b>   
           </div>
      </div>
     
        <div class="col"style="padding-top: 50px; padding-left:50px;">
          <div class="d-flex justify-content-center">
          <div class="card" style="width:22rem;">
            <img class="card-img-top" src="images/logoroom.jpeg" style="width:350px;" alt="Card image cap">
            <div class="card-body" style="width:18rem;">
              <h5 class="card-title" style="padding-left:2.3cm;color: blueviolet;" >Create New Room</h5>
              <div style="padding-left:1.8cm;">
                  <form action="/room" method="POST">
                
                    <input name="room" type="text"  required>
                    <div style="padding-top: 0.25cm; padding-left: 1cm;">
                      <button type="submit" style="background-color: blueviolet;" class="btn btn-primary">New Room</button>
                    </div>
                    
                  </span>
                 
                </form>
                
              </div>
           
            </div>
          </div>
          </div>
        </div>



      </div>
    </div>
  </div>
  
</body>
  </body>
</html>